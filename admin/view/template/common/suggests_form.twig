{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">

        <div class="panel panel-default">

            <div class="panel-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-author">{{ column_firstname }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="author" readonly value="{{ firstname }}" placeholder="{{ column_firstname }}" id="input-author" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-author">{{ column_lastname }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="author" readonly value="{{ lastname }}" placeholder="{{ column_lastname }}" id="input-author" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-author">{{ column_product }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="author" readonly value="{{ product }}" placeholder="{{ column_product }}" id="input-author" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-author">{{ column_price }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="author" readonly value="{{ price }}" placeholder="{{ column_price }}" id="input-author" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-author">{{ column_phone }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="author" readonly value="{{ phone }}" placeholder="{{ column_phone }}" id="input-author" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-author">{{ column_supplement_address }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="author" readonly value="{{ supplement_address }}" placeholder="{{ column_supplement_address }}" id="input-author" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-author">{{ column_zip_code }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="author" readonly value="{{ zip_code }}" placeholder="{{ column_zip_code }}" id="input-author" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-author">{{ column_city }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="author" readonly value="{{ city }}" placeholder="{{ column_city }}" id="input-author" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-author">{{ column_delivery_method }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="author" readonly value="{{ delivery_method }}" placeholder="{{ column_delivery_method }}" id="input-author" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-author">{{ column_text }}</label>
                        <div class="col-sm-10">
                            <textarea name="text" cols="60" readonly rows="8" placeholder="{{ text }}" id="input-text" class="form-control">{{ column_text }}</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-author">{{ column_street }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="author" readonly value="{{ street }}" placeholder="{{ column_street }}" id="input-author" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-author">{{ column_country }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="author" readonly value="{{ country }}" placeholder="{{ column_country }}" id="input-author" class="form-control" />
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}