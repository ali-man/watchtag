{{ header }}
<!--start User-cabinet-->
<section class="user-cabinet mt-5 mb-5 inputcolor">
    <div class="container">
        <div class="user-cabinet-block bg-white">
            <div class="row">
                {% if error_warning %}
                    <div class="col-12 col-md-12">
                        <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i>{{  error_warning }}
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        </div>
                    </div>
                {% endif %}
                {% if success %}
                    <div class="col-12 col-md-12">
                        <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        </div>
                    </div>
                {% endif %}
                <div class="col-12 col-md-12 col-lg-4 b-right">
                    <div class="owHidddin">
                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                            <a class="nav-item nav-link active" id="my1nav-home-tab" data-toggle="tab"     href="#my1nav-home"    role="tab"  aria-controls="my1nav-home"     aria-selected="true">{{ text_edit }}</a>
                            <a class="nav-item nav-link" id="my2nav-profile-tab"     data-toggle="tab"     href="#my2nav-profile" role="tab"  aria-controls="my2nav-profile"  aria-selected="false">{{ update_password }}</a>
                            {# <a class="nav-item nav-link" id="my3nav-contact-tab"     data-toggle="tab"     href="#my3nav-contact" role="tab"  aria-controls="my3nav-contact"  aria-selected="false">{{ text_order }}</a> #}
                            <a class="nav-item nav-link" href="{{ logout }}">{{ text_logout }}</a>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-12 col-lg-8">

                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="my1nav-home" role="tabpanel" aria-labelledby="my1nav-home-tab">
                            <div class="user-profil">
                                <div class="row">
                                    <div class="col-md-6 offset-md-3 mb-2">
                                        <div class="userr-c-title">{{ text_edit }}</div>
                                    </div>
                                </div>

                                {{ user_info }}
                            </div>
                        </div>  <!--end tab1-->
                        <div class="tab-pane fade" id="my2nav-profile" role="tabpanel" aria-labelledby="my2nav-profile-tab">
                            <div class="user-profil">
                                    <div class="row">
                                        <div class="col-md-6 offset-md-3 mb-2">
                                            <div class="userr-c-title">{{ update_password }}</div>
                                        </div>
                                    </div>
                                {{ user_password }}
                            </div>
                        </div>  <!--end tab2-->
                        <div class="tab-pane fade" id="my3nav-contact" role="tabpanel" aria-labelledby="my3nav-contact-tab">..q.</div> <!--end tab3-->
                    </div> <!--end tab-->

                </div>
            </div>
        </div>
    </div>  
</section>
