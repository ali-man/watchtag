
{{ header }}
    <!--start page-cart-->
    <section class="page-cart-my mt-5 mb-5 inputcolor">
        <div class="container">

            <div class="row justify-content-md-center">

                <div class="col-12 col-sm-12 col-md-4">
                  {% if error_warning %}
                    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
                  {% endif %}
                  <div class="cart-form bg-white">
                      <form action="{{ action }}" method="post" enctype="multipart/form-data"  class="needs-validation" style=" width: 250px;">
                          
                          <div class="nomeporol">
                              <span>{{ text_forgotten_text }}</span>
                              <p>{{ text_email }}</p>
                          </div>

                          <div class="input-group mb-3">
                            <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
                          </div>

                          <button class="btn btn-primary" type="submit">{{ button_continue }}</button>

                      </form>
                  </div>
                  <div class="Sign-up d-flex">
                    <a href="{{ back }}" class="">{{ button_back }}</a>
                  </div>
                </div>
                <!--end col //-->

            </div>
            <!--end row //-->

        </div>
        <!--end container //-->
    </section>
    <!--start User-cabinet-->
{{ footer }}