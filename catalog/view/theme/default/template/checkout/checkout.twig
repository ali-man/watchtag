        $("#getOrder").submit(function(e) {
            e.preventDefault();
            
            var form = $(this);
            var url = $(this).attr('action');
         
            $.ajax({
                type: "POST",
                url:  '/upload' + url,
                data: form.serialize(),
                success: function(data) {
                    if(data.error)
                    {
                        $('.eror_text').each(function(index,item){
                                $(item).html("");
                        });
                        for(var i in data.error)
                        {
                            $('.' + i).html(data.error[i]);
                        }
                    }
                    else
                    {
                        $.toast().reset('all');
                        $.toast({
                            heading: data,
                            position: 'top-center',
                            stack: false,
                            icon: 'info'
                        })
                        setTimeout(function(){
                            var payment_method = $("#getOrder input[name='payment_method']:checked").val();
                            if(payment_method == "Chrono24"){
                                window.open('https://www.chrono24.com/dealer/watchtag/index.htm', '_blank');
                            }
                            window.location.href = "/";
                        },2000);

                    }
                },
                error: function(xhr, ajaxOptions, thrownError) {
                    alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
                }
            });
        });
